{
  "name": "kaarle-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "build:prod": "next build",
    "build:data": "ts-node --transpile-only scripts/build-data.ts",
    "build:data:env": "WORKBOOK_PATH=content/works_content.xlsx ts-node --transpile-only scripts/build-data.ts",
    "build:excel": "node scripts/build-from-excel.js",
    "excel:convert": "node scripts/excel-to-json.js",
    "excel:examine": "node scripts/examine-excel.js",
    "csv:convert": "node scripts/csv-to-json.js",
    "build:csv": "node scripts/csv-to-json.js",
    "excel:to-csv": "node scripts/excel-to-csv.js",
    "prebuild": "bash scripts/check-responsive.sh",
    "test:ui": "playwright test --reporter=list"
  },
  "dependencies": {
    "@types/xlsx": "^0.0.35",
    "autoprefixer": "^10.4.21",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "xlsx": "^0.18.5"
  }
}